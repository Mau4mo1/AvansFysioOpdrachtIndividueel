@model AvansFysioOpdrachtIndividueel.Models.PatientModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <h1>@Model.Name's  overview:</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">DateOfBirth</th>
                <th scope="col">Gender</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Name</td>
                <td>@Model.Email</td>
                <td>@Model.DateOfBirth</td>
                <td>@Model.Gender</td>
            </tr>
        </tbody>
    </table>

    @if (Model.PatientDossier == null)
    {
        <h2>Hier komen patienten dossier's</h2>
    }
    else
    {
        <table>
            <thead>
                <tr>
                    <th>Diagnose code</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.PatientDossier.DiagnosisCode</td>
                </tr>
            </tbody>
        </table>
    }
