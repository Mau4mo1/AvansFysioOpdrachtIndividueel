@{
    ViewData["Title"] = "Home Page";
}
@model PatientModel
<div class="text-center">
    <h1>@Model.Name's  overview:</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">DateOfBirth</th>
                <th scope="col">Gender</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Name</td>
                <td>@Model.Email</td>
                <td>@Model.DateOfBirth</td>
                <td>@Model.Gender</td>
            </tr>
        </tbody>
    </table>
</div>
